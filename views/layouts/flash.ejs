<% if (messages.error) { %>
    <div id="flash-message" class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
        <%= messages.error %>
    </div>
<% } %>
  
  <script>
    // Auto-remove flash message after 3 seconds
    setTimeout(() => {
      const flash_message = document.getElementById('flash-message');
      if (flash_message) {
        flash_message.style.display = 'none';
      }
    }, 3000);
  </script>
  